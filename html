  <!-- JavaScript -->
  <script>
    const form = document.getElementById("todo-form");
    const input = document.getElementById("todo-input");
    const list = document.getElementById("todo-list");
    const emptyState = document.getElementById("empty-state");

    form.addEventListener("submit", function (e) {
      e.preventDefault();

      const taskText = input.value.trim();
      if (!taskText) return;

      emptyState.style.display = "none";

      const li = document.createElement("li");
      li.className = `
        bg-pastelCream border border-yellow-200
        rounded-2xl p-5 shadow
        flex flex-col justify-between
        hover:shadow-lg transition
      `;

      li.innerHTML = `
        <div class="flex items-start justify-between">
          <p class="text-gray-800 font-medium">
            ${taskText}
          </p>
          <span class="material-symbols-outlined text-yellow-500">
            task_alt
          </span>
        </div>

        <div class="flex gap-3 mt-5">
          <button class="done flex-1 bg-green-100 text-green-700 py-2 rounded-xl hover:bg-green-200 transition">
            âœ” Done
          </button>
          <button class="delete flex-1 bg-red-100 text-red-600 py-2 rounded-xl hover:bg-red-200 transition">
            ðŸ—‘ Delete
          </button>
        </div>
      `;

      list.appendChild(li);
      input.value = "";
    });

    list.addEventListener("click", function (e) {
      const li = e.target.closest("li");

      if (e.target.classList.contains("delete")) {
        li.remove();
        if (list.children.length === 0) {
          emptyState.style.display = "block";
        }
      }

      if (e.target.classList.contains("done")) {
        li.classList.toggle("opacity-50");
      }
    });
  </script>

